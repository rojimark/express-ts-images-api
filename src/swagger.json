{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Images API",
    "description": "RESTful API using express and typescript for images",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "basePath": "/",
  "schemes": ["http", "https"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/api/health": {
      "get": {
        "tags": ["healthcheck"],
        "summary": "Application service health check ðŸ’—",
        "produces": ["application/json"],
        "consumes": ["application/json"],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/user": {
      "post": {
        "tags": ["create user"],
        "description": "Create user",
        "parameters": [
          {
            "name": "Input",
            "in": "body",
            "description": "Input data required to create new user",
            "schema": {
              "$ref": "#/definitions/UserInput"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "User has been created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/ResponseWithMessage"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "message": {}
          }
        }
      }
    },
    "/api/images/:photoLimit": {
      "get": {
        "tags": ["random images"],
        "description": "get random images",
        "parameters": [
          {
            "name": "x-api-key",
            "in": "header",
            "default": "Provide API-key (ie. API_KEY_TOKEN from .env.locals file)",
            "schema": {
              "type": "string"
            }
          },
          {
            "name":"photoLimit",
            "in":"path",
            "schema":{
              "type":"string"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Image has been uploaded",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/ResponseWithMessage"
                }
              }
            }
          },
          "401": {
            "description": "Access forbidden. Incorrect x-api-key!",
            "error": {}
          },
          "500": {
            "description": "Internal Server Error",
            "message": {}
          }
        },
        "security": [
          {
            "api_key": "$X_API_KEY"
          }
        ]
      }
    },
    "/api/image": {
      "post": {
        "tags": ["upload image"],
        "description": "upload image",
        "parameters": [
          {
            "name": "x-api-key",
            "in": "header",
            "default": "Provide API-key (ie. API_KEY_TOKEN from .env.locals file)",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "Input",
            "in": "body",
            "description": "Input data required to create new user",
            "schema": {
              "$ref": "#/definitions/ImageInput"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Image has been uploaded",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/ResponseWithMessage"
                }
              }
            }
          },
          "401": {
            "description": "Access forbidden. Incorrect x-api-key!",
            "error": {}
          },
          "500": {
            "description": "Internal Server Error",
            "message": {}
          }
        },
        "security": [
          {
            "api_key": "$X_API_KEY"
          }
        ]
      }
    }
  },
  "definitions": {
    "Input": {
      "required": ["input"],
      "properties": {
        "input": {
          "type": "object",
          "$ref": "#/definitions/InputBody"
        }
      }
    },
    "UserInput": {
      "required": ["email", "password"],
      "properties": {
        "email": {
          "type": "string",
          "default": "John Doe"
        },
        "password": {
          "type": "string",
          "format": "password",
          "default": "********"
        }
      }
    },
    "ImageInput": {
      "required": ["uri"],
      "properties": {
        "uri": {
          "type": "string",
          "default": "https://www.test.com"
        }
      }
    },
    "ResponseWithMessage": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string"
        }
      }
    },
    "x-api-key": {
      "type": "apiKey",
      "name": "x-api-key",
      "in": "header"
    }
  }
}
